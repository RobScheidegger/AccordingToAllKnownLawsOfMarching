<scenefile>
	<globaldata>
		<diffusecoeff v="0.5"/>
		<specularcoeff v="0.5"/>
		<ambientcoeff v="0.5"/>
	</globaldata>

	<cameradata>
		<pos x="3" y="0.5" z="0"/>
		<focus x="0" y="0" z="0"/>
		<up x="0" y="1" z="0"/>
		<heightangle v="30"/>
	</cameradata>

	<lightdata>
		<id v="0"/>
		<color r="1" g="1" b="1"/>
		<type v="directional"/>
		<direction x="-3" y="-2" z="-1"/>
	</lightdata>

	<object type="tree" name="root">
		<transblock>
		<scale x="0.4" y="0.4" z="0.4" />
			<object type="tree">
				<transblock>
					<scale x="1" y="1" z="1.7"/>
					<object type="primitive" name="sphere" >
						<ambient r="1" g="0.8" b="0"/>
						<diffuse r="1" g="0.8" b="0"/>
						<specular r="0" g="0" b="0"/>
						<shininess v="15"/>
					</object>
				</transblock>
				<transblock>
					<scale x="0.5" y="0.5" z="0.5"/>
					<translate x="0" y="0.1" z="0.5"/>
					<object type="primitive" name="sphere" >
						<ambient r="0" g="0" b="0"/>
						<diffuse r="0" g="0" b="0"/>
						<specular r="0" g="0" b="0"/>
						<shininess v="15"/>
					</object>
				</transblock>
				<transblock>
					<rotate x="1" y="0" z="0" angle="270"/>
					<scale x="0.5" y="0.5" z="0.5"/>
					<translate x="0" y="0.1" z="-0.4"/>
					<object type="primitive" name="cone" >
						<ambient r="0" g="0" b="0"/>
						<diffuse r="0" g="0" b="0"/>
						<specular r="0" g="0" b="0"/>
						<shininess v="15"/>
					</object>
				</transblock>
			</object>
		</transblock>
		
	</object>
</scenefile>

